<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="onListViewClick"
    tools:context="com.example.andrew.dungeoneer.Main3ActivityHealer">

    <Button
        android:id="@+id/action1Healer"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:onClick="onAction1Healer"
        android:text="Heal"
        tools:layout_editor_absoluteY="461dp" />

    <Button
        android:id="@+id/action4Healer"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:onClick="onAction4Healer"
        android:text="Recharge"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/action3Healer"
        tools:layout_editor_absoluteY="461dp" />

    <Button
        android:id="@+id/action2Healer"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:onClick="onAction2Healer"
        android:text="AOEHeal"
        tools:layout_editor_absoluteX="88dp"
        tools:layout_editor_absoluteY="461dp" />

    <Button
        android:id="@+id/action3Healer"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:onClick="onAction3Healer"
        android:text="AOEHOt"
        tools:layout_editor_absoluteX="176dp"
        tools:layout_editor_absoluteY="461dp" />

    <TextView
        android:id="@+id/manaText"
        android:layout_width="87dp"
        android:layout_height="36dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/Mana"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/manaView"
        android:layout_width="45dp"
        android:layout_height="18dp"
        android:text="@string/mana"
        android:textAlignment="center"
        android:textStyle="italic"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="390dp" />

    <ListView
        android:id="@+id/healerList"
        android:layout_width="376dp"
        android:layout_height="274dp"
        android:layout_marginBottom="116dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:listSelector="@android:color/holo_green_light"
        android:longClickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.028" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="135dp"
        android:layout_height="42dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="Healer"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/action1ManaView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="manacost"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/action2ManaView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="manacost"
        tools:layout_editor_absoluteX="114dp" />

    <TextView
        android:id="@+id/action3ManaView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="manacost"
        tools:layout_editor_absoluteX="224dp" />

    <TextView
        android:id="@+id/action4ManavView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="manacost"
        tools:layout_editor_absoluteX="310dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="44dp"
        android:layout_marginStart="16dp"
        android:text="actiondesc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="44dp"
        android:layout_marginStart="32dp"
        android:text="actiondesc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView9" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="44dp"
        android:layout_marginStart="32dp"
        android:text="actiondesc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView10" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="44dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="actiondesc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.619"
        app:layout_constraintStart_toEndOf="@+id/textView11" />

    <Button
        android:id="@+id/skipButton"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:onClick="onSkipButtonClick"
        android:text="SKIP"
        android:textAlignment="center"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

</android.support.constraint.ConstraintLayout>
